---
import '../global.css'

const {data,url,banner} = Astro.props
const link = "/blog/"+url;

import ImageComp from './ImageComp.astro'
---
<style>
    @media only screen and (min-width:1000px){
        a{
        text-decoration: none;
    }
    .container{
        border-radius: 10px;
        transition: 0.1s;
        cursor: pointer;
        background-color: #eeeeeedc;
       
    }
    .container:hover{
        transform: scale(1.05);
    }
    .main{
        max-width: 300px;
        box-shadow: rgba(50, 50, 93, 0.25) 0px 2px 5px -1px, rgba(0, 0, 0, 0.3) 0px 1px 3px -1px;
                        padding: 20px;
        border-radius: 10px;
        

    }
    .main:hover{
        box-shadow: rgba(36, 37, 37, 0.8) 0px 2px 5px -1px, rgba(0, 0, 0, 0.5) 0px 1px 3px -1px;
    }
    .main h3{
        display: -webkit-box;
            -webkit-line-clamp: 2; /* Limit to 2 lines */
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
    }
    div h5{
        font-weight: 300;
        margin:0;
        margin-right: 10px;
        color: #76ABAE;
    }
    p{
        display: -webkit-box;
            -webkit-line-clamp: 2; /* Limit to 2 lines */
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        margin: 0;
        margin-top:5px;
    }
    .imageContainer{
        margin-bottom: 10px;
        height:70px;
    }
    }

    @media only screen and (max-width:1000px){
        a{
        text-decoration: none;
    }
    .container{
        border-radius: 10px;
        transition: 0.1s;
        cursor: pointer;
        background-color: #EEEEEE;
    }
    .container:hover{
        transform: scale(1.05);
    }
    .main{
       
        box-shadow: rgba(50, 50, 93, 0.25) 0px 2px 5px -1px, rgba(0, 0, 0, 0.3) 0px 1px 3px -1px;
                        padding: 20px;
        margin-bottom: 30px;

        border-radius: 10px;
        

    }
    
    .main h3{
        display: -webkit-box;
            -webkit-line-clamp: 2; /* Limit to 2 lines */
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
    }
    div h5{
        font-weight: 300;
        margin:0;
        margin-right: 10px;
        color:#76ABAE;
    }
    p{
        display: -webkit-box;
        
            overflow: hidden;
            text-overflow: ellipsis;
            -webkit-line-clamp: 2; 
            -webkit-box-orient: vertical;
            margin:0;
            margin-top: 10px;
    }
    .imageContainer{
        margin-bottom: 20px;
        height:150px;
    }
    }
    
</style>
<main class="container">
    <a href={link}>

<div class="main" style="color:#222831">
    <div class="imageContainer" style="width:100%;overflow:hidden;"><ImageComp url={banner} width="100%" height="auto" style="margin-top: -20%;" alt=""/></div>
    
    <h3 style="margin:0;font-weight: 600;">{data.title} </h3>
    <div style="display: flex;flex-direction: row;"> <h5> {data.date} | </h5> <h5> {data.author}</h5></div>

---
import '../global.css'

const {data,url} = Astro.props
const link = "/blog/"+url;

---
<style>
    @media only screen and (min-width:1000px){
        a{
        text-decoration: none;
    }
    .container{
        border-radius: 10px;
        transition: 0.1s;
        cursor: pointer;
    }
    .container:hover{
        transform: scale(1.05);
    }
    .main{
        max-width: 400px;
        box-shadow: rgba(90, 93, 50, 0.8) 0px 2px 5px -1px, rgba(0, 0, 0, 0.5) 0px 1px 3px -1px;
        padding: 20px;
        border-radius: 10px;
        

    }
    .main:hover{
        box-shadow: rgba(50, 84, 93, 0.8) 0px 2px 5px -1px, rgba(0, 0, 0, 0.5) 0px 1px 3px -1px;
    }
    .main h3{
        overflow: hidden;
        text-overflow: ellipsis;
    }
    div h5{
        font-weight: 200;
        margin:0;
        margin-right: 10px;
        color: #feffa8;
    }
    }

    @media only screen and (max-width:1000px){
        a{
        text-decoration: none;
    }
    .container{
        border-radius: 10px;
        transition: 0.1s;
        cursor: pointer;
    }
    .container:hover{
        transform: scale(1.05);
    }
    .main{
        
        box-shadow:rgba(0, 0, 0, 0.8) 0px 2px 5px -1px, rgba(0, 0, 0, 0.5) 0px 1px 3px -1px;
        padding: 20px;

        border-radius: 10px;
        

    }
    
    .main h3{
        overflow: hidden;
        text-overflow: ellipsis;
    }
    div h5{
        font-weight: 200;
        margin:0;
        margin-right: 10px;
        color:#feffa8;
    }
    }
    
</style>
<main class="container">
    <a href={link}>

<div class="main" style="color:white">
    <h3 style="margin:0;font-weight: 400;">{data.title}</h3>
    <div style="display: flex;flex-direction: row;"> <h5> {data.date} | </h5> <h5> {data.author}</h5></div>
<p>this is a description of the above title, feel free to click on it and read. Thank you!</p>
    
    
</div></a>
</main>

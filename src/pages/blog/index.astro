---
import '../../global.css'
import BlogCard from '../../components/BlogCard.astro'
import Navbar from '../../components/Navbar.astro'
import SearchBar from '../../components/SearchBar.jsx'

const posts =await Astro.glob('../../posts/*.md')


---

<style>
    @media only screen and (max-width: 1000px) {
        .blogCards{
            
        padding: 50px;
       margin-bottom: 150px;
        justify-content: center;
       
        
    }
    .searchBar{
        margin-top: 150px;
        align-self: center;
         width:90%;
         
         
         display:flex;
         justify-content: center;
    }
    .cardSection{
       
        padding: 0px;
        margin-bottom: 50px;
    }
    h3{
        text-align: center;
        border-radius: 10px;
        background-color: #feffa8;
        color: black;
    }
    }
    @media only screen and (min-width: 1000px) {
        
        .blogCards{
        display: flex;
        
        flex-direction: column;
        flex-wrap: wrap;
        gap: 20px;
        padding: 20px;
        justify-content: center;
        
    }
    .searchBar{
        margin-top: 100px;
         width:50%;
         display:flex;
         align-self: center;
         justify-content: center;
    }
    .cardSection{
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
        gap:20px;
        margin-bottom: 50px;
    }
    h3{
        text-align: center;
        margin:0;
        font-weight: 500;
        border-radius: 10px;
        background-color: #feffa8;
        color: black;
    }
    }
    
</style>
<main  >
    <Navbar data ={posts}/>
    <div style="display: flex;justify-content:center;">
    <div class="searchBar" ><SearchBar data ={posts} client:only="react" /></div></div>


   <div class="blogCards">
    <h3>Latest</h3>
    <div class="latest cardSection">
        {posts.map(item=>{
        
            return <BlogCard data={item.frontmatter} url={item.frontmatter.tags[0]} />
             // <div>{item.frontmatter.title}</div>
         })}

    </div>
    <h3>Popular</h3>
    <div class="popular cardSection">
        {posts.map(item=>{
        
            return <BlogCard data={item.frontmatter} url={item.frontmatter.tags[0]} />
             // <div>{item.frontmatter.title}</div>
         })}

    </div>

    <h3>All</h3>
    <div class="all cardSection">
        {posts.map(item=>{
        
       return <BlogCard data={item.frontmatter} url={item.frontmatter.tags[0]} />
        // <div>{item.frontmatter.title}</div>
    })}
    </div>
    
    
   </div>
</main>